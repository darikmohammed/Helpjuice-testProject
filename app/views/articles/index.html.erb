<p style="color: green"><%= notice %></p>
<div class='flex-col'>
  <h1>Articles</h1>
  <%= form_with(url: articles_path, class: 'flex-col gap',method: :get, data:{ controller: 'search-form', turbo_frame: 'articles', turbo_action: 'advance'}) do |f|%>
    <%= f.label :query, 'Search for article'%>
    <%= f.text_field :query, class: 'text-field',data: {action:'input->search-form#search'}%>

    <%= f.submit 'Search', class: 'btn self-end'%>
  <%end%>

  <%= render 'articles', articles: @articles%>

  <%= link_to "New article", new_article_path, class: 'btn margin-top' %>
</div>
